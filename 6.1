import SpriteKit

class GameScene: SKScene {
    override func didMoveToView(view: SKView) {
        /* Setup your scene here */
        let myLabel = SKLabelNode(fontNamed:"Chalkduster")
        myLabel.text = "Hello, World!"
        myLabel.fontSize = 32
        myLabel.position = CGPoint(x:CGRectGetMidX(self.frame), y:100)
        self.addChild(myLabel)
        
        //////////////////////// 左上角的 Stage 文字
        let myLabel2 = SKLabelNode(fontNamed: "AmericanTypewriter-Bold")
        myLabel2.text = "Stages";
        myLabel2.fontSize = 50;
        myLabel2.fontColor = UIColor(red: 255/255, green: 200/255, blue: 25/255, alpha: 250/255)
        myLabel2.position = CGPoint(x: 100, y: Int(self.size.height)-140);
        self.addChild(myLabel2)
        
        /////////////////////// BG
        let bgImage = SKSpriteNode(imageNamed: "game2bg.jpg")
        bgImage.zPosition = -1
        self.addChild(bgImage)
        bgImage.position = CGPoint(x: CGRectGetMidX(self.frame), y: CGRectGetMidY(self.frame));
        
        ////////////////////// 透過迴圈放置關卡圖
        for var y1 = Int(self.size.height/3);
                y1<Int(self.size.height)-10 ; y1 = y1+Int(self.size.height/3){
            for var x1:Int = Int(self.size.width/5);
                x1<Int(self.size.width)-5;x1 = x1+Int(self.size.width/5){
                let card1 = SKSpriteNode(imageNamed: "card3.png")
                card1.zPosition = 1
                self.addChild(card1)
                card1.position = CGPoint(x: x1, y: y1)
        }
    }
}
}

